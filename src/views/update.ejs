<% include partials/_header %>

<%= cancion %>

<div class="col-md-5 ">
        <div class="card">
            <!--Colocar el contenido de esa tarjeta-->
            <div class="card-body "> 
                <form action="/api/update/<%=cancion._id %>" method="POST" >
                    <div class="form-group">
                        <input type="text" name="name" placeholder="name of the song" class="form-control" value="<%= cancion.name %>">
                    </div>

                    <div class="form-group">
                        <input type="text" name="artist" placeholder="name of the artist" class="form-control" value="<%= cancion.artist %>">
                    </div>

                    <div class="form-group">
                        <input type="datetime" name="age" placeholder="age of the song" class="form-control" value="<%= cancion.age %>">
                    </div>


                    <button type="submit" class="btn btn-primary btn-block" >Update</button>
                </form>
            </div>

        </div>
    </div>
</div>